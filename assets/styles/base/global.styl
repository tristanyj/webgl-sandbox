html {
	font-family Plex Regular, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif
	word-spacing 1px
	-ms-text-size-adjust 100%
	-webkit-text-size-adjust 100%
	-moz-osx-font-smoothing grayscale
	-webkit-font-smoothing antialiased
	box-sizing border-box
	background $black
	color $white
}

.container-page {
	padding 100px
	min-height 100vh
}

.container-sketch {}

.canvas-container {
	canvas {
		display block
		position fixed
		z-index -1
		left 0
		top 0
	}
}

img {
	width 700px
	max-width 100%
}

h1 {
	margin-top 15px
	margin-bottom 15px
	font-family $font-title
	font-size $size-title
}

h2 {
	margin-top 15px
	margin-bottom 15px
	font-family $font-subtitle
	font-size $size-subtitle
}

p {
	font-family $font-body
	font-size $size-body
	line-height 150%
}

.back {
	position fixed
	top 40px
	left 40px
	color white
	z-index 10
	font-size 1.4rem
	opacity 0.7

	svg {
		width 18px
	}
}